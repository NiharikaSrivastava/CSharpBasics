<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TextTutorial.MainPage"
             BackgroundColor="White">

    <StackLayout Margin="20,30,20,30" Padding="0,10,0,10">
        <Entry Placeholder="Enter Text" FontSize="Large" TextChanged="Entry_TextChanged" Completed="Entry_Completed" MaxLength="10" IsPassword="True" IsSpellCheckEnabled="false" IsTextPredictionEnabled="False"/>
        <Label x:Name="OldLabel" Text="Old Here" FontSize="Medium" BackgroundColor="LightPink" FontAttributes="Bold"/>
        <Label x:Name="NewLabel" Text="New Here" FontSize="Medium" BackgroundColor="HotPink" FontAttributes="Bold"/>
        <Label x:Name="CompletedLabel" Text="Completed Here" FontSize="Medium" BackgroundColor="DeepPink" FontAttributes="Bold"/>
        <Editor Placeholder="Multi-line Text" HeightRequest="150"/>
        <Image Source="tulips.png" HeightRequest="250" Aspect="Fill" HorizontalOptions="Center" Margin="0,25,0,0"/>
    </StackLayout>

</ContentPage>
